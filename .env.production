# RAG Knowledge QA System - Production Environment Variables

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your_production_secret_key_here_change_this

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://rag_user:your_secure_postgres_password_here@postgres:5432/rag_db

# Vector Database Configuration
CHROMA_HOST=chroma
CHROMA_PORT=8001

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# LLM Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Embedding Configuration
EMBEDDING_PROVIDER=openai
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=300

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password_here
PROMETHEUS_RETENTION=30d

# Notification Configuration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SMTP_SERVER=smtp.gmail.com
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# SSL Configuration (Optional)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
BACKUP_S3_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
MAX_REQUEST_SIZE=104857600
CONNECTION_POOL_SIZE=20

# File Storage Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=/app/uploads
DATA_DIR=/app/data
LOG_DIR=/app/logs

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Logging Configuration
LOG_ROTATION=true
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Domain Configuration
DOMAIN_NAME=yourdomain.com
SUBDOMAIN=rag

# External Service Configuration (Optional)
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# Database Optimization
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAINTENANCE_WORK_MEM=256MB
POSTGRES_CHECKPOINT_COMPLETION_TARGET=0.9
POSTGRES_WAL_BUFFERS=16MB
POSTGRES_DEFAULT_STATISTICS_TARGET=100

# Redis Optimization
REDIS_MAXMEMORY=512mb
REDIS_MAXMEMORY_POLICY=allkeys-lru
REDIS_SAVE_INTERVAL=900 1

# Chroma Optimization
CHROMA_BATCH_SIZE=100
CHROMA_MAX_BATCH_SIZE=1000
CHROMA_PERSIST_INTERVAL=300